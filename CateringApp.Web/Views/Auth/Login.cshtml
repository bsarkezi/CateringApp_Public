<body class="hold-transition login-page">
    <div class="loading" id="loading" style="display:none;"><div class="spinner"> <div></div><div></div> <div></div><div></div> </div></div>
    <div class="login-box">
        <div class="login-logo">
            <h1>CateringApp</h1>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <form id="form">
                <div class="card-body login-card-body">
                    <h4 class="login-box-msg">Prijava u sustav</h4>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="email" placeholder="Email ili korisničko ime" name="email" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" id="password" placeholder="Lozinka" name="password" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="text-danger" id="error" style="display:none">Neispravno korisničko ime/E-Mail ili lozinka!</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="remember">
                                <label for="remember" class="custom-control-label">Zapamti me</label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Prijava</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        window.onload = () => {
            Auth.initialize();
        }
    </script>
</body>
</html>