
@{
    ViewData["Title"] = "Popis Cateringa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".add-catering" onclick="Caterings.handleModalOpen()"><i class="fas fa-plus"></i> Novi catering</button>
                </div>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <table id="caterings-list-table" class="table table-hover text-nowrap" style="width:100%"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade add-catering" role="dialog" id="add-catering-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="form">
                <div class="modal-header">
                    <h5 class="modal-title">Unos Cateringa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="spinner"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Ime cateringa</label>
                                <input type="text" class="form-control" name="catering-name" id="catering-name" required />
                            </div>
                            <div class="form-group">
                                <label>Ime klijenta</label>
                                <input type="text" class="form-control" name="client-name" id="client-name" required />
                            </div>
                            <div class="form-group">
                                <label for="dropdown-users">Zaduženi zaposlenici</label>
                                <select id="dropdown-users" multiple="multiple" name="users" placeholder="Odaberi..." style="width:100%" required>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="dropdown-vehicles">Vozilo</label>
                                <select class="form-control" id="dropdown-vehicles" name="vehicle" placeholder="Odaberi..." style="width:100%" required>
                                </select>
                            </div>
                            <div class="form-group" id="food-form-group">
                                <label>Hrana</label>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <button type="button" class="btn btn-primary" onclick="Caterings.addFood(null)"><i class="fas fa-plus"></i> Dodaj hranu</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-catering-close" class="btn btn-success mr-auto"><i class="fas fa-check"></i> Zatvori catering</button>
                    <button type="submit" class="btn btn-primary">Spremi</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade add-catering" role="dialog" id="delete-catering-prompt">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upozorenje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="spinner" hidden></div>
               <div>
                   Jeste li sigurni da želite obrisati catering?
               </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Caterings.deleteCateringConfirm()">Potvrdi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade add-catering" role="dialog" id="delete-catering-prompt">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upozorenje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="spinner" hidden></div>
               <div>
                   Jeste li sigurni da želite obrisati catering?
               </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Caterings.deleteCateringConfirm()">Potvrdi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
            </div>
        </div>
    </div>
</div>

<script>
    Caterings.initialize();
    Global.initialize();
</script>
