
@{
    ViewData["Title"] = "Kategorije hrane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".add-category" onclick="FoodCat.clearForm();"><i class="fas fa-plus"></i> Dodaj kategoriju</button>
                </div>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <table id="categories-list-table" class="table table-hover text-nowrap" style="width:100%"></table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade add-category" role="dialog" id="add-category-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="form">
                <div class="modal-header">
                    <h5 class="modal-title">Unos kategorije hrane</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Naziv kategorije</label>
                                <input type="text" class="form-control" name="category-name" id="category-name" autocomplete="off" required maxlength="50" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Opis</label>
                                <textarea class="form-control" name="category-description" id="category-description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Spremi</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" role="dialog" id="delete-category-modal">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upozorenje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        Jeste li sigurni da želite obrisati kategoriju? 
                        <br/>
                        <b>Brisanje kategorije će obrisati i stavke hrane koje pripadaju toj kategoriji!</b>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="FoodCat.deleteCategoryConfirm()">Potvrdi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
            </div>
        </div>
    </div>
</div>

<script>
    FoodCat.initialize();
</script>

